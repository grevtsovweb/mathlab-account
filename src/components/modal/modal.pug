include ../mixins/svg.pug

.modal
    .modal__inner.modal__notice
        button.modal__close
            +svg(10,10,"icon-close")
        .modal__wrapper
            h4.modal__title Выберите занятие, которые вы хотите перенести или отменить
            .modal__subtitle Выберите запланированные занятия, которые вы хотите перенести или отменить
            .modal__calendar
                include ../calendar-transfer/calendar-transfer-active.pug

        .modal__wrapper(style="display: none;")
            .modal__icon
                +svg(35,36,"icon-notice")
            h4.modal__title Заявка на отмену занятия отправлена

