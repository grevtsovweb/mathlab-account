include ../ticket/ticket.pug
include ../button/button.pug

article.intensive-card.intensive-card--orange
    .intensive-card__content
        .intensive-card__tickets
            .intensive-card__tickets-item
                +ticket("Интенсив")
            .intensive-card__tickets-item
                +ticket("11 класс")
        .intensive-card__data-block
            h1.intensive-card__title Интенсив по высшей математике
            p.intensive-card__description  Чтобы определить твой уровень знаний, пожалуйста, пройди тестирование, перед началом занятий!
            p.intensive-card__warning Количество мест ограничено. Записывайтесь заранее!
        .intensive-card__footer
            .intensive-card__teacher
                include ../teacher/teacher.pug
            .intensive-card__date
                span.intensive-card__date-icon
                    +svg(18,18,"icon-clock-history")
                span.intensive-card__date-text 23-28 июля | Москва
    .intensive-card__choice-block
        .intensive-card__price
            span.intensive-card__old-price 1 500 руб.
            span.intensive-card__new-price 500 руб.
        .intensive-card__button-block
            .intensive-card__button-block-item
                +button('button--full-width-m button--orange', "Записаться")
            .intensive-card__button-block-item
                +button('button--full-width-m button--transparent-orange', "Подробнее")
